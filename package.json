{
  "name": "bugajski.io",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "i:dev": "infisical run pnpm dev",
    "dev:clean": "rm -rf .next && rm -rf next-env.d.ts && pnpm dev",
    "i:dev:clean": "infisical run pnpm dev:clean",
    "ci": "payload migrate && pnpm build",
    "build": "next build",
    "i:build": "infisical run pnpm build",
    "build:clean": "rm -rf .next && rm -rf next-env.d.ts && pnpm build",
    "i:build:clean": "infisical run pnpm build:clean",
    "start": "next start",
    "i:start": "infisical run pnpm start",
    "migrate": "payload migrate",
    "i:migrate": "infisical run pnpm migrate",
    "migrate:create": "payload migrate:create",
    "i:migrate:create": "infisical run pnpm migrate:create",
    "migrate:dev": "pnpm migrate:clean && pnpm i:migrate:create && pnpm i:migrate",
    "generate:importmap": "infisical run payload generate:importmap",
    "generate:types": "infisical run payload generate:types",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware --fix",
    "lint:check": "oxlint --type-aware",
    "stylelint": "stylelint '**/*.css' --fix --ignore-path .gitignore",
    "stylelint:check": "stylelint '**/*.css' --ignore-path .gitignore",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.78.0",
    "@payloadcms/email-resend": "3.78.0",
    "@payloadcms/live-preview-react": "3.78.0",
    "@payloadcms/next": "3.78.0",
    "@payloadcms/richtext-lexical": "3.78.0",
    "@payloadcms/ui": "3.78.0",
    "@t3-oss/env-nextjs": "^0.13.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "luxon": "^3.7.2",
    "next": "16.2.0-canary.54",
    "payload": "3.78.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.11.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "postcss": "^8.5.6",
    "stylelint": "^17.4.0",
    "stylelint-config-clean-order": "^8.0.1",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.30.3"
}
