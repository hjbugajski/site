{
  "name": "bugajski.io",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "next dev --turbo",
    "i:dev": "infisical run pnpm dev",
    "ci": "payload migrate && pnpm build",
    "build": "next build",
    "i:build": "infisical run pnpm build",
    "start": "next start",
    "i:start": "infisical run pnpm start",
    "migrate": "payload migrate",
    "i:migrate": "infisical run pnpm migrate",
    "migrate:create": "payload migrate:create",
    "i:migrate:create": "infisical run pnpm migrate:create",
    "migrate:dev": "pnpm migrate:clean && pnpm i:migrate:create && pnpm i:migrate",
    "generate:importmap": "infisical run payload generate:importmap",
    "generate:types": "infisical run payload generate:types",
    "lint": "next lint",
    "lint:all": "pnpm prettier && pnpm eslint && pnpm stylelint",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "stylelint": "stylelint '**/*.css' --ignore-path .gitignore",
    "stylelint:fix": "stylelint '**/*.css' --fix --ignore-path .gitignore"
  },
  "packageManager": "pnpm@9.15.1",
  "dependencies": {
    "@payloadcms/db-postgres": "3.11.0",
    "@payloadcms/email-resend": "3.11.0",
    "@payloadcms/live-preview-react": "3.11.0",
    "@payloadcms/next": "3.11.0",
    "@payloadcms/richtext-lexical": "3.11.0",
    "@payloadcms/ui": "3.11.0",
    "@t3-oss/env-nextjs": "^0",
    "class-variance-authority": "^0",
    "clsx": "^2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3",
    "next": "15.1.2",
    "payload": "3.11.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2",
    "zod": "^3"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@next/eslint-plugin-next": "15.1.0",
    "@tailwindcss/postcss": "4.0.0-beta.8",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3",
    "@types/node": "^20",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "eslint": "^9",
    "eslint-config-prettier": "^9",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-prettier": "^5",
    "eslint-plugin-react": "^7",
    "globals": "^15",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0",
    "stylelint": "^16",
    "stylelint-config-clean-order": "^6",
    "stylelint-config-standard": "^36",
    "tailwindcss": "4.0.0-beta.8",
    "tsx": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8"
  }
}
