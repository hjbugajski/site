{
  "name": "bugajski.io",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "i:dev": "infisical run pnpm dev",
    "dev:clean": "rm -rf .next && rm -rf next-env.d.ts && pnpm dev",
    "i:dev:clean": "infisical run pnpm dev:clean",
    "ci": "payload migrate && pnpm build",
    "build": "next build",
    "i:build": "infisical run pnpm build",
    "build:clean": "rm -rf .next && rm -rf next-env.d.ts && pnpm build",
    "i:build:clean": "infisical run pnpm build:clean",
    "start": "next start",
    "i:start": "infisical run pnpm start",
    "migrate": "payload migrate",
    "i:migrate": "infisical run pnpm migrate",
    "migrate:create": "payload migrate:create",
    "i:migrate:create": "infisical run pnpm migrate:create",
    "migrate:dev": "pnpm migrate:clean && pnpm i:migrate:create && pnpm i:migrate",
    "generate:importmap": "infisical run payload generate:importmap",
    "generate:types": "infisical run payload generate:types",
    "lint": "next lint",
    "lint:all": "pnpm prettier && pnpm eslint && pnpm stylelint",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "stylelint": "stylelint '**/*.css' --ignore-path .gitignore",
    "stylelint:fix": "stylelint '**/*.css' --fix --ignore-path .gitignore"
  },
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@payloadcms/db-postgres": "3.58.0",
    "@payloadcms/email-resend": "3.58.0",
    "@payloadcms/live-preview-react": "3.58.0",
    "@payloadcms/next": "3.58.0",
    "@payloadcms/richtext-lexical": "3.58.0",
    "@payloadcms/ui": "3.58.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "next": "15.4.7",
    "payload": "3.58.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@next/eslint-plugin-next": "15.4.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.7",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "stylelint": "^16.24.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
