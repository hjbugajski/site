{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "singleQuote": true,
  "ignorePatterns": [
    "**/.next-env.d.ts",
    "**/.next/**",
    "**/importMap.js",
    "**/migrations/**",
    "**/payload-types.ts"
  ],
  "sortImports": {
    "customGroups": [
      {
        "groupName": "payload-config",
        "elementNamePattern": ["@payload-config"]
      },
      {
        "groupName": "site",
        "elementNamePattern": ["@/"]
      },
      {
        "groupName": "react",
        "elementNamePattern": ["react", "react-dom"]
      }
    ],
    "groups": [
      ["builtin"],
      ["react"],
      ["external", "type-external"],
      ["payload-config"],
      ["site"],
      ["internal", "type-internal"],
      ["parent", "type-parent", "sibling", "type-sibling"],
      ["index", "type-index"],
      ["side_effect"],
      ["unknown"]
    ],
    "newlinesBetween": true
  },
  "sortTailwindcss": {
    "stylesheet": "./src/app/(site)/globals.css",
    "attributes": ["class", "className"],
    "functions": ["cn", "cva"],
    "preserveWhitespace": false
  }
}
